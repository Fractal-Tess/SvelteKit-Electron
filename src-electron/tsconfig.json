{
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["../node_modules/*"]
    },
    "outDir": "../build/"
  },
  "include": ["**/*.ts"]
}
